[{{ range $index, $page := .Site.Pages }}
 {{ if ne $page.Type "json" }}
 {{ if ne $page.Type "xml"}}
 {{ if eq .Section "blog" }}
   {{ if and $index (gt $index 0) }},{{ end }}
     {
       "url": "{{ $page.Permalink }}",
       "title": {{ $page.Title | jsonify}},
       "section": "{{ .Section }}",
       "tags": [{{ range $tindex, $tag := $page.Params.tags }}{{ if $tindex }}, {{ end }}"{{ $tag }}"{{ end }}],
       "content": {{ $page.PlainWords | jsonify }}
     }
 {{ end }}
 {{ end }}
 {{ end }}
 {{ end }}]
